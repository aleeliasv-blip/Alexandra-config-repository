package ProyectPlaceMark.controller;
import ProyectPlaceMark.utils.addproductos;
import ProyectPlaceMark.utils.addventa;
import ProyectPlaceMark.utils.addclientes;

import java.util.Scanner;

public class controllersesion{
      private static final Scanner datos = new Scanner(System.in);
      public void controlsesion(){

      while (true) {
            IO.println("1. Ir a Productos");
            IO.println("2. Ir a Clientes");
            IO.println("3. Ir a Ventas");
            IO.println("4. Salir");
            System.out.print("Seleccione una opción: ");
            
            int opcion = datos.nextInt();
            datos.nextLine(); // Limpiar buffer
            
            switch (opcion) {
                case 1:
                    iraproduct();
                    break;
                case 2:
                    iracliente();
                    break;
                case 3:
                    iraventa();
                    break;
                case 4:
                    System.out.println("Saliendo...");
                    return;
                default:
                    System.out.println("Opción inválida");
            }
        }
      }
        public void iraproduct(){
            addproductos productos= new addproductos();
            productos.opcionesProduct();
          
        }

        public void iracliente(){
            addclientes clientes= new addclientes();
            clientes.opcionesCliente();          
        }
        public void  iraventa(){
            addventa ventas = new addventa();
            ventas.menuVentas();
        } 
     }
  
